
[
    {
        "name": "survey-frontend-container",
        "image": "${image_path}:${image_tag}",
        "cpu": 0,
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80,
                "protocol": "tcp"
            }
        ],
        "essential": true,
        "environment": [
                {
                    "name": "VITE_API_URL",
                    "value": "//survey.incredihire.com/"
                },
                {
                    "name": "PROJECT_NAME",
                    "value": "Survey-frontend"
                },
                {
                    "name": "WITH_CREDENTIALS",
                    "value": "true"
                }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "survey-frontend-logs",
                "awslogs-region": "us-west-2",
                "awslogs-stream-prefix": "ecs"
            }
        }
    }
]
